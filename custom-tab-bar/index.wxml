<!--components/tabbat/tabbar.wxml-->
<view class = "tabBar">

  <cover-view data-path = "{{list[0].pagePath}}" 
  data-index =  "{{list[0].index}}"
  bindtap="switchTab" class = "tabButton">
    <cover-image src="{{selected === 0? list[0].selectedIconPath :list[0].iconPath}}"></cover-image>
    <cover-view>{{list[0].text}}</cover-view>
  </cover-view>

